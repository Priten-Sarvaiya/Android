<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mario" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleMario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mario"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/marioRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

                <TextView
                    android:id="@+id/marioRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating : "
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pubg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlePubg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pubg"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/pubgRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

                <TextView
                    android:id="@+id/pubgRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating : "
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/freefire" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleFreeFire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FreeFire"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/freefireRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

                <TextView
                    android:id="@+id/freefireRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating : "
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/amongus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleAmongUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Among Us"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/amongusRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

                <TextView
                    android:id="@+id/amongusRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating : "
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
